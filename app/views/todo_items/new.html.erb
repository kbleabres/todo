<div class="mdl-layout mdl-js-layout">
  <main class="mdl-layout__content">
    <div class="page-content">
      <div class="mdl-layout-title"> Add item </div>
      <div class="mdl-grid">
        <%= simple_form_for @todo_item do |f| %>
          <%= f.input :title, wrapper: :mdl_field_floating %>
          <%= f.submit 'Add', class: 'mdl-button mdl-js-button mdl-button--raised' %>
        <% end %>
      </div>
    </div>
  </main>
</div>

